generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {

  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
    id String @id
    username String @unique
    email String @unique
    passwordHash String

    sessions Session[]
    quizs Quiz[]

    createdAt DateTime @default (now())

    @@map("users")
}


model Session {
    id String @id
    userId String
    expiresAt DateTime
    user User @relation(fields: [userId], references:[id], onDelete:Cascade)

    @@map("session")
}

model Quiz {
    id String @id
    userId String
    createdAt DateTime @default (now())

    user User @relation(fields: [userId], references:[id], onDelete:Cascade)

    @@map("quiz")
}


model MiniQuiz {
    id String @id
    quizId String
    createdAt DateTime @default(now())

    content String[]

    quiz Quiz @relation(fields:[quizId], references:[id], onDelete:Cascade)

    @@map("miniquiz")
}

