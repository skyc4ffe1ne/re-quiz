generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {

  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
    id String @id
    username String @unique
    email String @unique
    passwordHash String

    sessions Session[]

    createdAt @default (now())

    @@map("users")
}


model Sessison {
    id String @id
    userId string
    expiresAt DateTime
    user User @relation(filed: [userId], references:[id], onDelete:Cascade)

    @@map("quiz")
}

model Quiz {
    id String @id
    userId String
    createdAt @default (now())

    user User @relation(filed: [userId], references:[id], onDelete:Cascade)

    @@map("quiz")
}

